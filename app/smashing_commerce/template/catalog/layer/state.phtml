/**
 * Category layered navigation state
 *
 * @see Mage_Catalog_Block_Layer_State
 */
?>
<?php $_filters = $this->getActiveFilters() ?>
<div style="padding-top:2px;">
<?php if(!empty($_filters)): ?>
    <h4><?php echo $this->__('Currently Shopping by') ?>:</h4>
    <div class="narrowed-category">
	<?php $count = 0; ?>
    <?php foreach ($_filters as $_filter): ?>
	<div style="float:left; padding-top:3px; padding-left:3px;">
	<div class="currently_shop_left"></div>
	<div class="currently_shop_middle">
        <?php echo $this->__($_filter->getName()) ?>: <?php echo $_filter->getLabel() ?>
	 </div>
	 <div class="currently_shop_right"><a href="<?php echo $_filter->getRemoveUrl() ?>" class="widget-btn"  title="<?php echo $this->__('Remove This Item') ?>">X</a></div>
	 </div>
	<?php
		$count++;
		if($count > 2){
			$count=0;echo "<div class='clear'></div>";
		}	
	?>
    <?php endforeach; ?>
	<div class="clear"></div>
    </div>
        <div class="actions" style="display:none;"><a href="<?php echo $this->getClearUrl() ?>"><?php echo $this->__('Clear All Items') ?></a></div>
<?php endif; ?>
</div>
