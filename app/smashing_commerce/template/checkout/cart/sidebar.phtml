/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */
?>
<?php $_cartQty = $this->getSummaryCount() ?>
<div class="block block-cart" style="margin-bottom:0px;">
<div class="block-title">
<strong>Shopping Basket</strong>
</div>
<div class="block-content" style="padding-top:0px;">
<div class="over_all_cart">
<div class="view_your_cart">
<div class="cart_new_price"><?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?></div>
   </div>
    <?php if ($_cartQty>0): ?>
            <?php if ($_cartQty==1): ?>
                <div class="your_cart_text"><?php echo $this->__('You have <a href="%s"><strong>1 item</strong></a> in your shopping basket', $this->getUrl('checkout/cart')) ?></div>
            <?php else: ?>
                <div class="your_cart_text"><?php echo $this->__('You have <a href="%s"><strong>%s items</strong></a> in your shopping basket', $this->getUrl('checkout/cart'), $_cartQty) ?></div>
            <?php endif ?>
    <?php else: ?>
    <p style="color:#fff;"><?php echo $this->__('You have no items in your shopping basket') ?></p>
    <?php endif ?>
	  <?php $_items = $this->getRecentItems() ?>
    <?php if(count($_items)): ?>
    <h5 style="color:#fff; padding-left:0px;"><?php echo $this->__('Recently added item(s)') ?></h5>
     <ol id="cart-sidebar" class="mini-products-list">
    <?php foreach($_items as $_item): ?>
        <?php echo $this->getItemHtml($_item) ?>
    <?php endforeach; ?>
    </ol>
    <script type="text/javascript">decorateList('cart-sidebar', 'non-recursive')</script>
   <?php endif ?>
	</div>
</div>

<div class="side_bottom_bg"></div></div>
<!-- [ends] .cart-sidebar // -->